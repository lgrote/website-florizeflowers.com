---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import { SUPPORTED_LANGUAGES, type SupportedLanguage } from '../../i18n/config';

export async function getStaticPaths() {
  return SUPPORTED_LANGUAGES.map((lang) => ({
    params: { lang },
  }));
}

const { lang } = Astro.params as { lang: SupportedLanguage };

// Get page content from collection
const allPages = await getCollection('pages');
const pageData = allPages.find(page => page.id === `${lang}/sitemap.md` || page.id === `${lang}/sitemap`);

const allServices = await getCollection('services');
const services = allServices.filter(service => service.data.lang === lang);

const allOccasions = await getCollection('occasions');
const occasions = allOccasions.filter(occasion => occasion.data.lang === lang);

const sortedServices = services.sort((a, b) => b.data.base.rating - a.data.base.rating);
const sortedOccasions = occasions.sort((a, b) => a.data.base.name.localeCompare(b.data.base.name));
---

<BaseLayout
  title={pageData?.data.title || 'Sitemap'}
  description={pageData?.data.description || ''}
>
  <div class="py-12">
    <div class="container">
      <h1 class="text-4xl md:text-5xl font-bold text-florize-green mb-8 text-center">
        {pageData?.data.intro?.heading || 'Sitemap'}
      </h1>
      <p class="text-center text-lg text-gray-700 mb-12 max-w-3xl mx-auto">
        {pageData?.data.intro?.paragraph || ''}
      </p>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
        <!-- Main Pages -->
        <div class="bg-white p-6 rounded-lg shadow-md">
          <h2 class="text-2xl font-bold text-florize-green mb-4">{pageData?.data.sections?.main || 'Main Pages'}</h2>
          <ul class="space-y-2">
            <li><a href={`/${lang}`} class="text-florize-green hover:underline">Home</a></li>
            <li><a href={`/${lang}/services`} class="text-florize-green hover:underline">All Service Reviews</a></li>
            <li><a href={`/${lang}/occasions`} class="text-florize-green hover:underline">All Occasion Guides</a></li>
            <li><a href={`/${lang}/guides`} class="text-florize-green hover:underline">Buying Guides</a></li>
            <li><a href={`/${lang}/about`} class="text-florize-green hover:underline">About Us</a></li>
            <li><a href={`/${lang}/contact`} class="text-florize-green hover:underline">Contact</a></li>
          </ul>
        </div>

        <!-- Service Reviews -->
        <div class="bg-white p-6 rounded-lg shadow-md">
          <h2 class="text-2xl font-bold text-florize-green mb-4">{pageData?.data.sections?.services || 'Services'}</h2>
          <ul class="space-y-2">
            {sortedServices.map((service) => (
              <li>
                <a href={`/${lang}/services/${service.data.base.id}`} class="text-florize-green hover:underline">
                  {service.data.base.name}
                </a>
              </li>
            ))}
          </ul>
        </div>

        <!-- Occasion Guides -->
        <div class="bg-white p-6 rounded-lg shadow-md">
          <h2 class="text-2xl font-bold text-florize-green mb-4">{pageData?.data.sections?.occasions || 'Occasions'}</h2>
          <ul class="space-y-2">
            {sortedOccasions.map((occasion) => (
              <li>
                <a href={`/${lang}/occasions/${occasion.data.base.id}`} class="text-florize-green hover:underline">
                  {occasion.data.base.name}
                </a>
              </li>
            ))}
          </ul>
        </div>

        <!-- Legal & Info -->
        <div class="bg-white p-6 rounded-lg shadow-md">
          <h2 class="text-2xl font-bold text-florize-green mb-4">{pageData?.data.sections?.legal || 'Legal'}</h2>
          <ul class="space-y-2">
            <li><a href={`/${lang}/privacy-policy`} class="text-florize-green hover:underline">Privacy Policy</a></li>
            <li><a href={`/${lang}/terms-of-use`} class="text-florize-green hover:underline">Terms of Use</a></li>
            <li><a href={`/${lang}/affiliate-disclosure`} class="text-florize-green hover:underline">Affiliate Disclosure</a></li>
          </ul>
        </div>
      </div>

      <div class="mt-12 text-center">
        <p class="text-gray-600">
          {pageData?.data.labels?.cantFind || "Can't find what you're looking for?"} <a href={`/${lang}/contact`} class="text-florize-green hover:underline font-semibold">{pageData?.data.labels?.contactHelp || 'Contact us'}</a> for help.
        </p>
      </div>
    </div>
  </div>
</BaseLayout>
