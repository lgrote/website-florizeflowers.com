---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import BreadcrumbNavigation from '../../components/navigation/BreadcrumbNavigation.astro';
import { SUPPORTED_LANGUAGES, type SupportedLanguage } from '../../i18n/config';
import { t } from '../../i18n/translations';

export async function getStaticPaths() {
  return SUPPORTED_LANGUAGES.map((lang) => ({
    params: { lang },
  }));
}

const { lang } = Astro.params as { lang: SupportedLanguage };

// Get about page content from collection
const allPages = await getCollection('pages');
// Collection IDs include .md extension
const aboutPage = allPages.find(page => page.id === `${lang}/about.md` || page.id === `${lang}/about`);

if (!aboutPage) {
  throw new Error(`About page content not found for language: ${lang}. URL: ${Astro.url.pathname}. Available IDs: ${allPages.map(p => p.id).join(', ')}`);
}

const { Content } = await aboutPage.render();

const aboutText = t(lang, 'pages.about');
const aboutFlorizeText = t(lang, 'pages.aboutFlorize');

// Breadcrumb items
const breadcrumbItems = [
  { label: t(lang, 'nav.home'), href: `/${lang}` },
  { label: aboutText },
];
---

<BaseLayout
  title={aboutPage.data.title}
  description={aboutPage.data.description}
  showBreadcrumbs={true}
>
  <BreadcrumbNavigation slot="breadcrumbs" items={breadcrumbItems} />
  <div class="py-12">
    <div class="container">
      <div class="max-w-3xl mx-auto">
        <h1 class="text-4xl md:text-5xl font-bold text-florize-green mb-8">
          {aboutFlorizeText}
        </h1>

        <div class="prose prose-lg max-w-none">
          <Content />
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
