---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import { SUPPORTED_LANGUAGES, type SupportedLanguage } from '../../i18n/config';

export async function getStaticPaths() {
  return SUPPORTED_LANGUAGES.map((lang) => ({
    params: { lang },
  }));
}

const { lang } = Astro.params as { lang: SupportedLanguage };

// Get affiliate disclosure page content from collection
const allPages = await getCollection('pages');
const affiliatePage = allPages.find(page => page.id === `${lang}/affiliate-disclosure.md` || page.id === `${lang}/affiliate-disclosure`);

if (!affiliatePage) {
  throw new Error(`Affiliate disclosure page content not found for language: ${lang}`);
}

const { Content } = await affiliatePage.render();
---

<BaseLayout
  title={affiliatePage.data.title}
  description={affiliatePage.data.description}
>
  <div class="py-12">
    <div class="container">
      <div class="max-w-3xl mx-auto prose prose-lg">
        <Content />
      </div>
    </div>
  </div>
</BaseLayout>
