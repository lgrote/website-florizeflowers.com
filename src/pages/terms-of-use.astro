---
import { getEntry } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';

const termsPage = await getEntry('pages', 'terms-of-use');
const { Content } = await termsPage.render();
---

<BaseLayout
  title={termsPage.data.title}
  description={termsPage.data.description}
>
  <div class="py-12">
    <div class="container">
      <div class="max-w-3xl mx-auto prose prose-lg">
        <Content />
      </div>
    </div>
  </div>
</BaseLayout>
