---
import BaseLayout from '../layouts/BaseLayout.astro';
import { DEFAULT_LANGUAGE } from '../i18n/config';
---

<BaseLayout
  title="Page Not Found | Florize Flowers"
  description="The page you're looking for doesn't exist. Return to Florize Flowers homepage to find flower delivery reviews and guides."
>
  <div class="py-20">
    <div class="container">
      <div class="max-w-2xl mx-auto text-center">
        <div class="mb-8">
          <h1 class="text-9xl font-bold text-florize-green mb-4">404</h1>
          <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-4">
            Page Not Found
          </h2>
          <p class="text-xl text-gray-600 mb-8">
            Sorry, the page you're looking for doesn't exist or has been moved.
          </p>
        </div>

        <div class="bg-cream-white p-8 rounded-lg mb-8">
          <h3 class="text-xl font-bold text-florize-green mb-4">
            What can you do?
          </h3>
          <ul class="text-left space-y-3 text-gray-700">
            <li class="flex items-start">
              <svg class="w-6 h-6 text-florize-green mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
              <span>Check the URL for typos and try again</span>
            </li>
            <li class="flex items-start">
              <svg class="w-6 h-6 text-florize-green mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
              <span>Use the navigation menu to find what you're looking for</span>
            </li>
            <li class="flex items-start">
              <svg class="w-6 h-6 text-florize-green mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
              <span>Return to the homepage and start fresh</span>
            </li>
          </ul>
        </div>

        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href={`/${DEFAULT_LANGUAGE}`}
            class="btn btn-primary px-8 py-4 text-lg inline-block"
          >
            ‚Üê Back to Homepage
          </a>
          <a
            href={`/${DEFAULT_LANGUAGE}/services`}
            class="btn btn-secondary px-8 py-4 text-lg inline-block"
          >
            Browse Services
          </a>
        </div>

        <div class="mt-12 pt-8 border-t border-gray-200">
          <h3 class="text-lg font-bold text-gray-800 mb-4">
            Popular Pages
          </h3>
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 text-left">
            <a href={`/${DEFAULT_LANGUAGE}/services/interflora`} class="card hover:shadow-lg transition-shadow">
              <div class="text-sm font-semibold text-florize-green">Interflora Review</div>
              <div class="text-xs text-gray-600 mt-1">Best Overall Flower Delivery</div>
            </a>
            <a href={`/${DEFAULT_LANGUAGE}/services/bloom-wild`} class="card hover:shadow-lg transition-shadow">
              <div class="text-sm font-semibold text-florize-green">Bloom & Wild Review</div>
              <div class="text-xs text-gray-600 mt-1">Most Innovative Letterbox Flowers</div>
            </a>
            <a href={`/${DEFAULT_LANGUAGE}/occasions/mothers-day`} class="card hover:shadow-lg transition-shadow">
              <div class="text-sm font-semibold text-florize-green">Mother's Day Flowers</div>
              <div class="text-xs text-gray-600 mt-1">Gift Ideas & Service Recommendations</div>
            </a>
            <a href={`/${DEFAULT_LANGUAGE}/occasions/valentines-day`} class="card hover:shadow-lg transition-shadow">
              <div class="text-sm font-semibold text-florize-green">Valentine's Day Flowers</div>
              <div class="text-xs text-gray-600 mt-1">Romantic Bouquet Delivery</div>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
