---
import { getEntry } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';

const privacyPage = await getEntry('pages', 'privacy-policy');
const { Content } = await privacyPage.render();
---

<BaseLayout
  title={privacyPage.data.title}
  description={privacyPage.data.description}
>
  <div class="py-12">
    <div class="container">
      <div class="max-w-3xl mx-auto prose prose-lg">
        <Content />
      </div>
    </div>
  </div>
</BaseLayout>
