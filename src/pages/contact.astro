---
import { getEntry } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import BreadcrumbNavigation from '../components/navigation/BreadcrumbNavigation.astro';

const contactPage = await getEntry('pages', 'contact');
const { Content } = await contactPage.render();

// Breadcrumb items
const breadcrumbItems = [
  { label: 'Home', href: '/' },
  { label: 'Contact' },
];
---

<BaseLayout
  title={contactPage.data.title}
  description={contactPage.data.description}
  showBreadcrumbs={true}
>
  <BreadcrumbNavigation slot="breadcrumbs" items={breadcrumbItems} />
  <div class="py-12">
    <div class="container">
      <div class="max-w-2xl mx-auto prose prose-lg">
        <Content />
      </div>
    </div>
  </div>
</BaseLayout>
