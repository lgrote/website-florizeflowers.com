---
import { getEntry } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import BreadcrumbNavigation from '../components/navigation/BreadcrumbNavigation.astro';

// Get about page content from collection
const aboutPage = await getEntry('pages', 'about');

if (!aboutPage) {
  throw new Error('About page content not found');
}

const { Content } = await aboutPage.render();

// Breadcrumb items
const breadcrumbItems = [
  { label: 'Home', href: '/' },
  { label: 'About' },
];
---

<BaseLayout
  title={aboutPage.data.title}
  description={aboutPage.data.description}
  showBreadcrumbs={true}
>
  <BreadcrumbNavigation slot="breadcrumbs" items={breadcrumbItems} />
  <div class="py-12">
    <div class="container">
      <div class="max-w-3xl mx-auto">
        <h1 class="text-4xl md:text-5xl font-bold text-florize-green mb-8">
          About Florize
        </h1>

        <div class="prose prose-lg max-w-none">
          <Content />
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
