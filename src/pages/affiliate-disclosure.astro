---
import { getEntry } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';

const affiliatePage = await getEntry('pages', 'affiliate-disclosure');
const { Content } = await affiliatePage.render();
---

<BaseLayout
  title={affiliatePage.data.title}
  description={affiliatePage.data.description}
>
  <div class="py-12">
    <div class="container">
      <div class="max-w-3xl mx-auto prose prose-lg">
        <Content />
      </div>
    </div>
  </div>
</BaseLayout>
