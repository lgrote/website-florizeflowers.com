---
import { getCollection, getEntry } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';

// Get page content from collection
const pageData = await getEntry('pages', 'sitemap');

const services = await getCollection('services');
const occasions = await getCollection('occasions');

const sortedServices = services.sort((a, b) => b.data.base.rating - a.data.base.rating);
const sortedOccasions = occasions.sort((a, b) => a.data.base.name.localeCompare(b.data.base.name));
---

<BaseLayout
  title={pageData.data.title}
  description={pageData.data.description}
>
  <div class="py-12">
    <div class="container">
      <h1 class="text-4xl md:text-5xl font-bold text-florize-green mb-8 text-center">
        {pageData.data.intro!.heading}
      </h1>
      <p class="text-center text-lg text-gray-700 mb-12 max-w-3xl mx-auto">
        {pageData.data.intro!.paragraph}
      </p>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
        <!-- Main Pages -->
        <div class="bg-white p-6 rounded-lg shadow-md">
          <h2 class="text-2xl font-bold text-florize-green mb-4">{pageData.data.sections!.main}</h2>
          <ul class="space-y-2">
            <li><a href="/" class="text-florize-green hover:underline">Home</a></li>
            <li><a href="/services" class="text-florize-green hover:underline">All Service Reviews</a></li>
            <li><a href="/occasions" class="text-florize-green hover:underline">All Occasion Guides</a></li>
            <li><a href="/guides" class="text-florize-green hover:underline">Buying Guides</a></li>
            <li><a href="/about" class="text-florize-green hover:underline">About Us</a></li>
            <li><a href="/contact" class="text-florize-green hover:underline">Contact</a></li>
          </ul>
        </div>

        <!-- Service Reviews -->
        <div class="bg-white p-6 rounded-lg shadow-md">
          <h2 class="text-2xl font-bold text-florize-green mb-4">{pageData.data.sections!.services}</h2>
          <ul class="space-y-2">
            {sortedServices.map((service) => (
              <li>
                <a href={`/services/${service.data.base.id}`} class="text-florize-green hover:underline">
                  {service.data.base.name}
                </a>
              </li>
            ))}
          </ul>
        </div>

        <!-- Occasion Guides -->
        <div class="bg-white p-6 rounded-lg shadow-md">
          <h2 class="text-2xl font-bold text-florize-green mb-4">{pageData.data.sections!.occasions}</h2>
          <ul class="space-y-2">
            {sortedOccasions.map((occasion) => (
              <li>
                <a href={`/occasions/${occasion.data.base.id}`} class="text-florize-green hover:underline">
                  {occasion.data.base.name}
                </a>
              </li>
            ))}
          </ul>
        </div>

        <!-- Legal & Info -->
        <div class="bg-white p-6 rounded-lg shadow-md">
          <h2 class="text-2xl font-bold text-florize-green mb-4">{pageData.data.sections!.legal}</h2>
          <ul class="space-y-2">
            <li><a href="/privacy-policy" class="text-florize-green hover:underline">Privacy Policy</a></li>
            <li><a href="/terms-of-use" class="text-florize-green hover:underline">Terms of Use</a></li>
            <li><a href="/affiliate-disclosure" class="text-florize-green hover:underline">Affiliate Disclosure</a></li>
          </ul>
        </div>
      </div>

      <div class="mt-12 text-center">
        <p class="text-gray-600">
          {pageData.data.labels!.cantFind} <a href="/contact" class="text-florize-green hover:underline font-semibold">{pageData.data.labels!.contactHelp}</a> for help.
        </p>
      </div>
    </div>
  </div>
</BaseLayout>
