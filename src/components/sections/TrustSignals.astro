---
import { getCollection } from 'astro:content';
import Card from '../ui/Card.astro';
import type { SupportedLanguage } from '../../i18n/config';

export interface Props {
  title?: string;
  signals?: Array<{
    title: string;
    description: string;
    icon?: string;
  }>;
  className?: string;
  lang?: SupportedLanguage;
}

const {
  title,
  signals,
  className = '',
  lang = 'en' as SupportedLanguage
} = Astro.props;

// Read from collection if props are not provided
const allSections = await getCollection('homepage-sections');
const trustSignalsData = allSections.find(section =>
  section.data.sectionType === 'trust-signals' && section.data.lang === lang
);

const sectionTitle = title || trustSignalsData?.data.title || 'Why Trust Us';
const defaultSignals = signals || trustSignalsData?.data.cards || [];
---

<section class={`section-padding bg-cream-white ${className}`}>
  <div class="container">
    <div class="max-w-3xl mx-auto text-center">
      <h2 class="text-3xl font-bold text-florize-green mb-6">
        {sectionTitle}
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mt-8">
        {defaultSignals.map((signal) => (
          <Card>
            <h3 class="text-xl font-bold mb-3 text-florize-green">
              {signal.title}
            </h3>
            <p class="text-gray-700">
              {signal.description}
            </p>
          </Card>
        ))}
        <slot />
      </div>
    </div>
  </div>
</section>
