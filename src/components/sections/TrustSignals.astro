---
import Card from '../ui/Card.astro';

export interface Props {
  title?: string;
  signals?: Array<{
    title: string;
    description: string;
    icon?: string;
  }>;
  className?: string;
}

const {
  title = "Why Trust Florize Flower Reviews?",
  signals,
  className = ''
} = Astro.props;

const defaultSignals = signals || [
  {
    title: "Independent Testing",
    description: "We purchase all flowers with our own money and test services exactly as a regular customer would. No special treatment, just honest reviews."
  },
  {
    title: "Transparent Disclosure",
    description: "While we earn commissions from some services, this never influences our rankings. Our testing methodology remains completely independent."
  }
];
---

<section class={`section-padding bg-cream-white ${className}`}>
  <div class="container">
    <div class="max-w-3xl mx-auto text-center">
      <h2 class="text-3xl font-bold text-florize-green mb-6">
        {title}
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mt-8">
        {defaultSignals.map((signal) => (
          <Card>
            <h3 class="text-xl font-bold mb-3 text-florize-green">
              {signal.title}
            </h3>
            <p class="text-gray-700">
              {signal.description}
            </p>
          </Card>
        ))}
        <slot />
      </div>
    </div>
  </div>
</section>
