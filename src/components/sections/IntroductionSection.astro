---
import { getEntry } from 'astro:content';

export interface Props {
  heading?: string;
  paragraphs?: string[];
}

const {
  heading,
  paragraphs
} = Astro.props;

// Read from collection if props are not provided
const introductionData = await getEntry('homepage-sections', 'introduction');
const sectionHeading = heading || introductionData.data.title;
const sectionParagraphs = paragraphs || introductionData.data.paragraphs || [];
---

<section id="about" class="section-padding">
  <div class="container">
    <div class="max-w-3xl mx-auto text-center">
      <h2 class="text-3xl font-bold text-florize-green mb-6">
        {sectionHeading}
      </h2>
      {sectionParagraphs.map((paragraph) => (
        <p class="text-lg text-gray-700 mb-4 last:mb-0">
          {paragraph}
        </p>
      ))}
    </div>
  </div>
</section>
