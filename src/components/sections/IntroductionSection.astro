---
import { getCollection } from 'astro:content';
import type { SupportedLanguage } from '../../i18n/config';

export interface Props {
  heading?: string;
  paragraphs?: string[];
  lang?: SupportedLanguage;
}

const {
  heading,
  paragraphs,
  lang = 'en' as SupportedLanguage
} = Astro.props;

// Read from collection if props are not provided
const allSections = await getCollection('homepage-sections');
const introductionData = allSections.find(section =>
  section.data.sectionType === 'introduction' && section.data.lang === lang
);

const sectionHeading = heading || introductionData?.data.title || 'About Us';
const sectionParagraphs = paragraphs || introductionData?.data.paragraphs || [];
---

<section id="about" class="section-padding">
  <div class="container">
    <div class="max-w-3xl mx-auto text-center">
      <h2 class="text-3xl font-bold text-florize-green mb-6">
        {sectionHeading}
      </h2>
      {sectionParagraphs.map((paragraph) => (
        <p class="text-lg text-gray-700 mb-4 last:mb-0">
          {paragraph}
        </p>
      ))}
    </div>
  </div>
</section>
