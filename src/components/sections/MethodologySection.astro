---
import { getCollection } from 'astro:content';
import ImageCard from '../ui/ImageCard.astro';
import type { SupportedLanguage } from '../../i18n/config';

export interface Props {
  className?: string;
  lang?: SupportedLanguage;
}

const {
  className = '',
  lang = 'en' as SupportedLanguage
} = Astro.props;

const allSections = await getCollection('homepage-sections');
const methodologyData = allSections.find(section =>
  section.data.sectionType === 'methodology' && section.data.lang === lang
);

const methodologyCards = methodologyData?.data.cards || [];
const sectionTitle = methodologyData?.data.title || 'Our Methodology';
const footerText = methodologyData?.data.footerText;
---

<section class={`section-padding bg-cream-white ${className}`} aria-labelledby="methodology-heading">
  <div class="container">
    <div class="max-w-6xl mx-auto">
      <h2 id="methodology-heading" class="text-3xl font-bold text-florize-green mb-6 text-center">
        {sectionTitle}
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-8">
        {methodologyCards.map((card) => (
          <ImageCard
            image={card.image}
            imageAlt={card.imageAlt}
            title={card.title}
            description={card.description}
          />
        ))}
      </div>

      {footerText && (
        <p class="text-center mt-8 text-lg text-gray-700 max-w-4xl mx-auto">
          {footerText}
        </p>
      )}
    </div>
  </div>
</section>
