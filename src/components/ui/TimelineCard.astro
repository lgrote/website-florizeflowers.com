---
export interface TimelineStep {
  time: string;
  title: string;
  description: string;
  tip?: string;
}

export interface Props {
  title?: string;
  steps: TimelineStep[];
  className?: string;
}

const {
  title,
  steps,
  className = ''
} = Astro.props;
---

<div class={`timeline-card ${className}`}>
  {title && (
    <h3 class="timeline-title">{title}</h3>
  )}

  <div class="timeline-steps">
    {steps.map((step, index) => (
      <div class="timeline-step">
        <div class="timeline-marker">
          <div class="timeline-dot"></div>
          {index < steps.length - 1 && <div class="timeline-line"></div>}
        </div>

        <div class="timeline-content">
          <div class="timeline-header">
            <span class="timeline-time">{step.time}</span>
          </div>
          <h4 class="timeline-step-title">{step.title}</h4>
          <p class="timeline-description">{step.description}</p>
          {step.tip && (
            <div class="timeline-tip">
              <span class="tip-icon">ðŸ’¡</span>
              <span>{step.tip}</span>
            </div>
          )}
        </div>
      </div>
    ))}
  </div>
</div>

<style>
  .timeline-card {
    background: white;
    border: 1px solid #e5e7eb;
    border-radius: 12px;
    padding: 2rem;
    margin: 2rem 0;
  }

  .timeline-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--florize-green, #4a7c59);
    margin: 0 0 2rem 0;
  }

  .timeline-steps {
    position: relative;
  }

  .timeline-step {
    display: flex;
    gap: 1.5rem;
    position: relative;
  }

  .timeline-step:not(:last-child) {
    margin-bottom: 2rem;
  }

  .timeline-marker {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    flex-shrink: 0;
  }

  .timeline-dot {
    width: 16px;
    height: 16px;
    background: var(--florize-green, #4a7c59);
    border: 3px solid white;
    border-radius: 50%;
    box-shadow: 0 0 0 2px var(--florize-green, #4a7c59);
    z-index: 2;
  }

  .timeline-line {
    width: 2px;
    flex: 1;
    background: linear-gradient(to bottom,
      var(--florize-green, #4a7c59) 0%,
      #e5e7eb 100%);
    margin-top: 0.5rem;
    min-height: 40px;
  }

  .timeline-content {
    flex: 1;
    padding-bottom: 0.5rem;
  }

  .timeline-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 0.5rem;
  }

  .timeline-time {
    display: inline-block;
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--florize-green, #4a7c59);
    background: #f0f8f4;
    padding: 0.25rem 0.75rem;
    border-radius: 12px;
  }

  .timeline-step-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: #1f2937;
    margin: 0 0 0.5rem 0;
  }

  .timeline-description {
    font-size: 0.9375rem;
    color: #6b7280;
    line-height: 1.6;
    margin: 0;
  }

  .timeline-tip {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-top: 0.75rem;
    padding: 0.75rem;
    background: #fffbeb;
    border-left: 3px solid #fbbf24;
    border-radius: 4px;
    font-size: 0.875rem;
    color: #92400e;
  }

  .tip-icon {
    flex-shrink: 0;
    font-size: 1rem;
  }

  @media (max-width: 768px) {
    .timeline-card {
      padding: 1.5rem;
    }

    .timeline-step {
      gap: 1rem;
    }

    .timeline-step-title {
      font-size: 1rem;
    }

    .timeline-description {
      font-size: 0.875rem;
    }
  }
</style>
