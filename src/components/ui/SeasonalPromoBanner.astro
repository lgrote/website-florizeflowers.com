---
import { getActivePromotions } from '../../lib/sanity';

interface Props {
  placement: 'home-hero' | 'home-banner' | 'service-pages' | 'global';
  className?: string;
}

const { placement, className = '' } = Astro.props;

// Fetch active promotions for this placement
const promotions = await getActivePromotions(placement);
---

{promotions.length > 0 && (
  <div class={`seasonal-promo-section ${className}`}>
    {promotions.map((promo) => (
      <div class="promo-banner" set:html={promo.htmlCode} />
    ))}
  </div>
)}

<style>
  .seasonal-promo-section {
    margin: 1.5rem 0;
  }

  .promo-banner {
    margin-bottom: 1rem;
  }

  .promo-banner:last-child {
    margin-bottom: 0;
  }

  .promo-banner :global(img) {
    max-width: 100%;
    height: auto;
    display: block;
    margin: 0 auto;
  }

  .promo-banner :global(a) {
    display: inline-block;
  }

  /* Style promotional content */
  .promo-banner :global(.promo-content) {
    background: linear-gradient(135deg, #d4af37 0%, #b89530 100%);
    color: white;
    padding: 1.5rem;
    border-radius: 0.5rem;
    text-align: center;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .promo-banner :global(.promo-title) {
    font-size: 1.5rem;
    font-weight: bold;
    margin-bottom: 0.5rem;
  }

  .promo-banner :global(.promo-description) {
    font-size: 1rem;
    margin-bottom: 1rem;
  }

  .promo-banner :global(.promo-cta) {
    background: white;
    color: #d4af37;
    padding: 0.75rem 1.5rem;
    border-radius: 0.375rem;
    font-weight: bold;
    text-decoration: none;
    display: inline-block;
    transition: transform 0.2s;
  }

  .promo-banner :global(.promo-cta:hover) {
    transform: scale(1.05);
  }

  @media (max-width: 768px) {
    .promo-banner :global(.promo-title) {
      font-size: 1.25rem;
    }

    .promo-banner :global(.promo-description) {
      font-size: 0.875rem;
    }
  }
</style>
