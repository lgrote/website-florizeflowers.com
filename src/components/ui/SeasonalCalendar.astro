---
export interface SeasonInfo {
  season: string;
  icon: string;
  months: string;
  popularFlowers: string[];
  availability: "Excellent" | "Good" | "Fair" | "Limited";
  pricing: "Budget-friendly" | "Moderate" | "Premium" | "Variable";
  tips: string[];
}

export interface Props {
  seasons: SeasonInfo[];
  title?: string;
}

const {
  seasons,
  title = "Seasonal Flower Guide"
} = Astro.props;

const availabilityColors = {
  "Excellent": "#10b981",
  "Good": "#3b82f6",
  "Fair": "#f59e0b",
  "Limited": "#ef4444"
};

const pricingColors = {
  "Budget-friendly": "#10b981",
  "Moderate": "#3b82f6",
  "Premium": "#f59e0b",
  "Variable": "#6b7280"
};
---

<div class="seasonal-calendar">
  <h3 class="seasonal-title">{title}</h3>
  <div class="seasons-grid">
    {seasons.map((season) => (
      <div class="season-card">
        <div class="season-header">
          <div class="season-icon">{season.icon}</div>
          <h4 class="season-name">{season.season}</h4>
          <p class="season-months">{season.months}</p>
        </div>
        <div class="season-content">
          <div class="season-flowers">
            <span class="content-label">Popular Flowers:</span>
            <ul class="flowers-list">
              {season.popularFlowers.map((flower) => (
                <li>{flower}</li>
              ))}
            </ul>
          </div>
          <div class="season-indicators">
            <div class="indicator">
              <span class="indicator-label">Availability:</span>
              <span
                class="indicator-badge"
                style={`background-color: ${availabilityColors[season.availability]}`}
              >
                {season.availability}
              </span>
            </div>
            <div class="indicator">
              <span class="indicator-label">Pricing:</span>
              <span
                class="indicator-badge"
                style={`background-color: ${pricingColors[season.pricing]}`}
              >
                {season.pricing}
              </span>
            </div>
          </div>
          {season.tips.length > 0 && (
            <div class="season-tips">
              <span class="content-label">Tips:</span>
              <ul class="tips-list">
                {season.tips.map((tip) => (
                  <li>{tip}</li>
                ))}
              </ul>
            </div>
          )}
        </div>
      </div>
    ))}
  </div>
</div>

